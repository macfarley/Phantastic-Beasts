    <%- include('../partials/_header') %>
    <title>Beastiary Index</title>
</head>
<body>
    <%- include('../partials/_navBar') %>

    <main class="overImage">
        <article>
            <form id="category-form" action="/creatures/category/:cateogry" method="get">
                <label for="creature-category">Looking just one type of monster?</label>
                <select id="creature-category" name="category">
                    <option value="constructs">Constructs</option>
                    <option value="dragonkin">Dragonkin</option>
                    <option value="eldritch horror">Eldritch Horror</option>
                    <option value="giant">Giant</option>
                    <option value="magical-beast">Magical Beast</option>
                    <option value="outsider">Outsider</option>
                    <option value="plants">Plants</option>
                    <option value="undead">Undead</option>
                </select>
                <button type="button" id="find-them-button">Find Them</button>
            </form>
        </article>

        <script>
            document.getElementById('find-them-button').addEventListener('click', function () {
                const category = document.getElementById('creature-category').value;
                window.location.href = `/creatures/category/${encodeURIComponent(category)}`;
            });
        </script>    
        <article>
            <h1>Beastiary Index</h1>
            <ul>
                <% creatureNames.forEach(name => { %>
                    <li><a href="/creatures/species/<%= name.replace(/\s+/g, '') %>"><%= name %></a></li>
                <% }); %>
            </ul>
        </article>
    </main>
</body>
</html>