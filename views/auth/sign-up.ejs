  <body>
    <%- include('../partials/_navBar') %>

    <main class="overImage">
      
        <h1>Register with the Guild to see the Beastiary</h1>
        <form action="/auth/sign-up" method="POST">
          <article>
            <div class="separate">
              <label for="username">Username:</label>
              <input type="text" name="username" id="username" required />
            </div>


            <div class="separate">
              <label for="password">Password (at least 12 characters, no spaces):</label>
              <input type="password" name="password" id="password" minlength="12" pattern="^\S+$" required />
            </div>

            <div class="separate">
              <label for="confirmPassword">Confirm Password (must match):</label>
              <input type="password" name="confirmPassword" id="confirmPassword" required />
            </div>
            <div class="separate">
              <label for="class">Adventuring Class:</label>
              <select name="class" id="class" >
                <option value="" disabled selected>Select your Class</option>
                <option value="Barbarian">Barbarian</option>
